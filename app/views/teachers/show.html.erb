<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @teacher.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @teacher.email %>
</p>

<h2>Lectures</h2>

<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Voting link</th>
    </tr>

    <% @teacher.lectures.each do |lecture| %>
        <tr>
            <td><%= lecture.name %></td>
            <td><%= lecture.date %></td>
            <td><%= link_to 'Vote', vote_lecture_url(lecture) %></td>
        </tr>
    <% end %>

</table>

<%= link_to 'Edit', edit_teacher_path(@teacher) %> |
<%= link_to 'Back', teachers_path %>
